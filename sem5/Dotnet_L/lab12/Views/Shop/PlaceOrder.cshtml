@model lab12.Models.OrderViewModel

@{
    ViewData["Title"] = "Place Order";
}

<h1>Place Your Order</h1>

<div class="row">
    <div class="col-md-6">
        <h3>Delivery Information</h3>
        <form asp-action="PlaceOrder" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" required />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" required />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" required />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZipCode" class="control-label"></label>
                <input asp-for="ZipCode" class="form-control" required />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" required />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" required />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <h3>Payment Information</h3>
            <div class="form-group">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <div>
                    <input type="radio" asp-for="PaymentMethod" value="Traditional Banking" required /> Traditional Banking
                </div>
                <div>
                    <input type="radio" asp-for="PaymentMethod" value="Blik" required /> Blik
                </div>
                <div>
                    <input type="radio" asp-for="PaymentMethod" value="Paypal" required /> Paypal
                </div>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>

            <h3>Order Summary</h3>
            <ul>
                @foreach (var item in Model.CartItems)
                {
                    <li>@item.Article.Title - Quantity: @item.Quantity - Price: @item.Article.Price.ToString("C")</li>
                }
            </ul>
            <p><strong>Total Cost: @Model.TotalCost.ToString("C")</strong></p>

            <input type="hidden" asp-for="TotalCost" />
            <input type="hidden" asp-for="CartItems" value="@Model.CartItems" />

            <button type="submit" class="btn btn-primary">Place Order</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
